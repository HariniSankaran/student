<form class="d-flex flex-column mt-5 pt-5 mx-auto col-6">
    
    <div class="d-flex flex-row justify-content-around">
        <label for="name" class="mt-5 mb-3  ">Name:</label>
        <input type="text" name="name" id="name" class="mt-5" value={{this.model.data.attributes.name}}/> 
    </div>
    
    <div class="d-flex flex-row justify-content-around">
        <label for="domain" class="my-3">Domain:</label>
        <input type="text" name="domain" id="domain" value={{this.model.data.attributes.domain}}>
    </div>

    <div class="d-flex flex-row justify-content-around ">
        <label for="year" class="my-3">Year:</label>
        <input type="number" name="year" id="year" value={{this.model.data.attributes.year}}>
    </div>

    <div class="d-flex flex-row justify-content-around">
      <label for="image" class="my-3">Image: </label>
      <select name="image url" id="image" class="dropdown my-auto" aria-placeholder="Image Url">
        <option value={{this.model.data.attributes.image}} selected>{{this.model.data.attributes.image}}</option>
